@model LoanManagement.Models.UpdateProductModel
@{
}
<h2>UPDATE PRODUCT</h2>
<form method="post" action="View" class="mt-5">
    <div class="invisible">
        <input type="text" class="form-control" asp-for="Id" >
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Interest Rate</label>
        <input type="number" class="form-control" asp-for="InterestRate">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Term In Days</label>
        <input type="text" class="form-control" asp-for="TermInDays">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Products">Delete</button>
</form>